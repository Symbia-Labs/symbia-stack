modules = ["nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Website"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Identity Service"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Logging Service"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Catalog Service"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Assistants Service"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Messaging Service"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Runtime Service"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Integrations Service"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Network Service"

[[workflows.workflow]]
name = "Website"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd website && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Identity Service"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd identity && PORT=8000 npm run dev"
waitForPort = 8000

[[workflows.workflow]]
name = "Logging Service"
author = "agent"

[[workflows.workflow.tasks]]
