author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd assistants && PORT=3000 npm run dev"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Messaging Service"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd messaging && PORT=3001 npm run dev"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
